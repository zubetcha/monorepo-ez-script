{
  "name": "monorepo-ez-script",
  "version": "0.0.1",
  "description": "CLI for running workspace script easily in monorepo",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc --project tsconfig.compile.json && chmod 755 dist/src/bin/cli.js",
    "lint": "eslint --ext .tsx --ext .ts src/",
    "format": "prettier --check ./src",
    "prepare": "pnpm build",
    "dev": "pnpm build && npm link"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zubetcha/monorepo-ez-scripts.git"
  },
  "keywords": [
    "monorepo",
    "CLI",
    "scripts",
    "task"
  ],
  "author": "zubetcha <zuhye5@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zubetcha/monorepo-ez-scripts/issues"
  },
  "homepage": "https://github.com/zubetcha/monorepo-ez-scripts#readme",
  "bin": {
    "mes": "dist/src/bin/cli.js"
  },
  "files": [
    "dist",
    "!test/**"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "glob": "^10.3.1",
    "progress": "^2.0.3",
    "prompts": "^2.4.2",
    "update-notifier": "^6.0.2",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.3.2",
    "@types/progress": "^2.0.5",
    "@types/prompts": "^2.4.4",
    "@types/update-notifier": "^6.0.4",
    "@types/validate-npm-package-name": "^4.0.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-raine": "^0.4.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^46.3.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.6.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "typescript": "^5.1.5"
  }
}
